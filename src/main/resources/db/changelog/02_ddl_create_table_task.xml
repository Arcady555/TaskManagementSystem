<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <property name="now" value="now()" dbms="postgresql"/>
    <changeSet id="01" author="Arcady555">

        <createTable tableName="task">
            <column autoIncrement="true" name="id" type="int">
                <constraints unique="true" nullable="false" primaryKey="true"/>
            </column>
            <column name="author_id" type="int">
                <constraints nullable="false" foreignKeyName="author_id" references="users(id)"/>
            </column>
            <column name="description" type="varchar(2000)"/>
            <column name="status_id" type="int"/>
            <column name="priority_id" type="int"/>
            <column name="executor_id" type="int">
                <constraints foreignKeyName="executor_id" references="users(id)"/>
            </column>
        </createTable>

    </changeSet>
</databaseChangeLog>
